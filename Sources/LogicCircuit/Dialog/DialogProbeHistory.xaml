<Window x:Class="LogicCircuit.DialogProbeHistory"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:lc="clr-namespace:LogicCircuit"
	WindowStartupLocation="CenterOwner"
	Title="{Binding Source={x:Static lc:Resources.TitleProbeHistory}, Mode=OneTime}"
	Style="{DynamicResource DialogWindow}"
>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<ListBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" ItemsSource="{Binding Path=History}" Margin="8" SelectionMode="Extended"/>

		<Button Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" Click="ButtonMarkClick" IsEnabled="{Binding Path=MarkAllowed}"
			Content="{Binding Source={x:Static lc:Resources.TitleMark}, Mode=OneTime}"
		/>
		<Button Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" IsDefault="True" IsCancel="True"
			Content="{Binding Source={x:Static lc:Resources.TitleOK}, Mode=OneTime}"
		/>
	</Grid>
</Window>
